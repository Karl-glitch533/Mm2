-- Vanxell Hub for Murder Mystery 2 Auto Collect Candy
-- WARNING: Use this script at your own risk.

local VanxellHub = Instance.new("ScreenGui")
VanxellHub.Name = "VanxellHub"
VanxellHub.Parent = game.CoreGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
MainFrame.Visible = false -- Start hidden
MainFrame.Parent = VanxellHub

local Title = Instance.new("TextLabel")
Title.Text = "Vanxell Hub - MM2"
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.TextScaled = true
Title.Parent = MainFrame

-- Function to create buttons
local function CreateButton(name, callback, position)
    local Button = Instance.new("TextButton")
    Button.Text = name
    Button.Size = UDim2.new(0.9, 0, 0, 40)
    Button.Position = position
    Button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Parent = MainFrame
    Button.MouseButton1Click:Connect(callback)
    return Button
end

-- Toggle GUI visibility
local function toggleGUI()
    MainFrame.Visible = not MainFrame.Visible
end

-- Create a button to toggle the GUI
local toggleButton = Instance.new("TextButton")
toggleButton.Text = "Toggle GUI"
toggleButton.Size = UDim2.new(0.1, 0, 0.1, 0)
toggleButton.Position = UDim2.new(0.9, 0, 0, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Parent = VanxellHub
toggleButton.MouseButton1Click:Connect(toggleGUI)

-- Auto Candy Feature
local isCollecting = false
local candiesCollected = {}

CreateButton("Toggle Auto Candy", function()
    isCollecting = not isCollecting
    if isCollecting then
        toggleButton.Text = "Auto Candy: ON"
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()

        while isCollecting do
            for _, candy in pairs(workspace:GetChildren()) do
                if candy:IsA("Part") and candy.Name == "Candy" and not candiesCollected[candy] then
                    candiesCollected[candy] = true -- Mark candy as collected
                    character.HumanoidRootPart.CFrame = candy.CFrame -- Teleport to candy
                    wait(0.5) -- Adjust timing as needed
                end
            end
            wait(1) -- Wait before the next scan for candies
        end
    else
        toggleButton.Text = "Auto Candy: OFF"
    end
end, UDim2.new(0.05, 0, 0.1, 0))

-- Reset Button
CreateButton("Reset Character", function()
    local player = game.Players.LocalPlayer
    player.Character:BreakJoints() -- This will reset the character
end, UDim2.new(0.05, 0, 0.2, 0))

-- Auto Shoot Button
local isShooting = false
local shootButton
local function createShootButton()
    if shootButton then return end -- Prevent creating multiple buttons
    shootButton = Instance.new("TextButton")
    shootButton.Text = "Auto Shoot"
    shootButton.Size = UDim2.new(0.1, 0, 0.1, 0)
    shootButton.Position = UDim2.new(0.9, 0, 0.3, 0) -- Right side of the screen
    shootButton.BackgroundColor3 = Color3.fromRGB(60, 255, 60)
    shootButton.TextColor3 = Color3.fromRGB(0, 0, 0)
    shootButton.Parent = VanxellHub
    shootButton.MouseButton1Click:Connect(function()
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("Tool") then
            local tool = player.Character.Tool
            isShooting = not isShooting
            shootButton.Text = isShooting and "Shooting ON" or "Auto Shoot"

            while isShooting do
                wait(0.5)
                if player and player.Character then
                    for _, enemy in pairs(workspace:GetChildren()) do
                        if enemy:IsA("Model") and enemy:FindFirstChild("Humanoid") and enemy:FindFirstChild("Player") then
                            -- Check if the enemy is the murderer
                            if enemy.Player.Value == "Murderer" then
                                tool.Activated:Fire() -- Simulate the shooting
                                break
                            end
                        end
                    end
                end
            end
        end
    end)
end

CreateButton("Toggle Auto Shoot", function()
    createShootButton()
end, UDim2.new(0.05, 0, 0.3, 0))

-- Identify Murderer/Sheriff Button
local function createIdentifyButton()
    local identifyButton = Instance.new("TextButton")
    identifyButton.Text = "Identify Murderer/Sheriff"
    identifyButton.Size = UDim2.new(0.9, 0, 0, 40)
    identifyButton.Position = UDim2.new(0.05, 0, 0.4, 0)
    identifyButton.BackgroundColor3 = Color3.fromRGB(255, 255, 60)
    identifyButton.TextColor3 = Color3.fromRGB(0, 0, 0)
    identifyButton.Parent = MainFrame

    identifyButton.MouseButton1Click:Connect(function()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player.Team == "Murderer" then
                -- Highlight murderer
                player.Character.HumanoidRootPart.BrickColor = BrickColor.new("Bright red")
                player.Character.HumanoidRootPart.Material = Enum.Material.Neon
            elseif player.Team == "Sheriff" then
                -- Highlight sheriff
                player.Character.HumanoidRootPart.BrickColor = BrickColor.new("Bright blue")
                player.Character.HumanoidRootPart.Material = Enum.Material.Neon
            end
        end
    end)
end

createIdentifyButton()

-- Grab Gun Button
CreateButton("Grab Gun", function()
    local player = game.Players.LocalPlayer
    local gun = workspace:FindFirstChild("Gun") -- Change this based on how your game handles guns
    if gun then
        player.Character.HumanoidRootPart.CFrame = gun.CFrame -- Teleport to gun
        wait(0.5) -- Small delay to simulate grabbing
        gun:Destroy() -- Remove the gun from the workspace (assuming it's a one-time use)
    else
        print("Gun not found.")
    end
end, UDim2.new(0.05, 0, 0.5, 0))

-- Exit Button
CreateButton("Exit", function()
    VanxellHub:Destroy()
end, UDim2.new(0.05, 0, 0.8, 0))

-- Draggable UI Function
local UIS = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos

MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
